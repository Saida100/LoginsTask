            android:top="0dp">
        <shape>
            <solid android:color="#ababab" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
   <item
            android:bottom="5dp"
            android:right="3dp">
         <shape>

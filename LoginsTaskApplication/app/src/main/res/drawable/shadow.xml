            <corners android:radius="15dp" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp">
            </corners>
            <size android:width="309dp"
                  android:height="396dp">
            </size>

        </shape>
    </item>
</layer-list>
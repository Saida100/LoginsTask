<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#343430"
>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/romb_full_3a"
               android:layout_centerInParent="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="20dp"
    />
    <ImageView
            android:id="@+id/rombBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_romb_for3a"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp"

    />
    <ImageView
            android:id="@+id/rombFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/romb_for_3a"
            android:layout_centerInParent="true"
            android:layout_alignTop="@id/rombBlack"

    />

    <TextView
            android:id="@+id/signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/rombFull"
            android:layout_marginTop="10dp"
            android:textColor="#d7f60b"
            android:textSize="20sp"
            android:text="Sign In"/>


    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="#d7f60b"
          android:layout_centerInParent="true"
          android:layout_below="@id/signIn"
          android:layout_marginTop="35dp"
          android:id="@+id/firstLine"
    >

    </View>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/email_3a"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="15dp"
               android:layout_below="@id/firstLine"
               android:id="@+id/email"


    />
    <EditText
            android:id="@+id/enterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="johndoe@gmail.com"
            android:textColorHint="#d7f60b"
            android:textSize="17sp"
            android:inputType="textEmailAddress"
            android:theme="@style/MyEditText"
            android:textColor="#d7f60b"
            android:layout_below="@id/firstLine"
            android:layout_toRightOf="@id/email"


    />
    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="#defe0a"
          android:layout_centerInParent="true"
          android:layout_below="@id/enterEmail"
          android:id="@+id/secondLine"
          android:layout_marginTop="10dp"
    >

    </View>
    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="#d7f60b"
          android:layout_centerInParent="true"
          android:layout_below="@id/secondLine"
          android:id="@+id/thirdLine"
          android:layout_marginTop="15dp"
    >

    </View>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/password_3a"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="15dp"
               android:layout_below="@id/thirdLine"
               android:id="@+id/passwordImage"
               android:layout_marginTop="15dp"


    />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColorHint="#d7f60b"
              android:textSize="17sp"
              android:inputType="textPassword"
              android:theme="@style/MyEditText"
              android:textColor="#d7f60b"
              android:text="johndoe@gmail.com"
              android:layout_toRightOf="@id/passwordImage"
              android:layout_below="@id/secondLine"
              android:id="@+id/edittextPassword"
              android:layout_marginTop="15dp"

    />

    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="#d7f60b"
          android:layout_centerInParent="true"
          android:layout_below="@id/edittextPassword"
          android:id="@+id/fourthLine"
          android:layout_marginTop="5dp"
    >

    </View>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/fourthLine"
            android:background="#d7f60b"
            android:text="Continue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/continue1"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="90dp"
                  android:layout_below="@id/continue1"
                  android:weightSum="2"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#d7f60b"
                  android:text="New User"
                  android:layout_marginLeft="20dp"
                  android:id="@+id/newUser"
                  android:layout_marginBottom="10dp"
                  android:layout_weight="1"


        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#d7f60b"
                  android:text="Reset"
                  android:layout_marginRight="20dp"
                  android:id="@+id/reset"
                  android:gravity="right"
                  android:layout_weight="1"



        />
    </LinearLayout>





</RelativeLayout>
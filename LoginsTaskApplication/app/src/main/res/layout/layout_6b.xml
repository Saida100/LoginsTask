<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#48e6f8">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/white_image_for_6a_6b"
                   android:layout_marginTop="35dp"
                   android:layout_gravity="center"
        />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/image_c_for_6a"
                   android:layout_marginTop="-65dp"
                   android:layout_gravity="top|center"

        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="chatuzzi"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginTop="40dp"
                  android:textSize="17sp"
                  android:textColor="#fff"
                  android:textStyle="bold"/>
        <EditText android:layout_width="231dp"
                  android:layout_height="80dp"
                  android:textSize="15sp"
                  android:textColor="#fff"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:inputType="textEmailAddress"
                  android:background="@drawable/rectangle_shape_email__for6a_6b"
                  android:hint="John Doe"
                  android:textColorHint="#fff"
                  android:paddingLeft="45dp"


        />

        <EditText android:layout_width="231dp"
                  android:layout_height="80dp"
                  android:textSize="15sp"
                  android:textColor="#fff"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:inputType="textEmailAddress"
                  android:background="@drawable/rectangle_shape_email__for6a_6b"
                  android:hint="johndoe@gmail.com"
                  android:textColorHint="#fff"
                  android:paddingLeft="45dp"

        />
        <EditText android:layout_width="231dp"
                  android:layout_height="80dp"
                  android:textSize="15sp"
                  android:textColor="#fff"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:gravity="center_vertical"
                  android:inputType="textPassword"
                  android:hint="password"
                  android:textColorHint="#fff"
                  android:paddingLeft="45dp"
                  android:background="@drawable/rectangle_shape_password__for6a_6b"


        />


    </LinearLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:layout_alignParentBottom="true"
    >
        <Button android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="Sign In"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#488ef8"
        />
        <Button android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="Sign Up"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#70f848"

        />

    </LinearLayout>


</RelativeLayout>
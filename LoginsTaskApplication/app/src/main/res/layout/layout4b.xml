<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
>
    <ImageView android:id="@+id/cloud"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="20dp"
               android:src="@drawable/cloud_dor_4a_b"


    />
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/pasketText"
               android:layout_alignTop="@+id/cloud"
               android:src="@drawable/pasket"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="5dp"
               android:layout_alignRight="@+id/cloud"
               android:layout_marginBottom="17dp"
               android:layout_alignLeft="@id/cloud"
               android:layout_alignBottom="@+id/cloud"/>

    <ImageView android:layout_width="439dp"
               android:layout_height="439dp"
               android:id="@+id/leftCircle"
               android:src="@drawable/ellipse_right_for_4a"
               android:layout_marginTop="220dp"
               android:layout_marginLeft="-220dp"

    />

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/centerCircle"
               android:layout_below="@id/pasketText"
               android:src="@drawable/ellipse_for4a"
               android:layout_marginTop="136dp"
               android:layout_centerHorizontal="true"
    />


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rightCircle"
               android:src="@drawable/ellipse_right_for_4b"
               android:layout_below="@id/pasketText"
               android:layout_marginTop="160dp"
               android:layout_marginLeft="220dp"

    />


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/secondLinear"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:background="@drawable/ellipse_red_for4b"


    >


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="New Account"
                  android:textColor="#fff"
                  android:textSize="16sp"
                  android:layout_gravity="center"
                  android:layout_marginTop="10dp"
                  android:gravity="center"
        />

        <EditText android:layout_width="169dp"
                  android:layout_height="38dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:hint="Email"
                  android:textColor="#000"
                  android:textSize="16sp"
                  android:background="@drawable/rectangle_shape"
                  android:layout_marginTop="10dp"
                  android:inputType="textEmailAddress"

        />
        <EditText android:layout_width="169dp"
                  android:layout_height="38dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:hint="Username"
                  android:textColor="#000"
                  android:textSize="16sp"
                  android:background="@drawable/rectangle_shape"
                  android:layout_marginTop="10dp"

        />


        <EditText android:layout_width="169dp"
                  android:layout_height="38dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:hint="password"
                  android:textColor="#000"
                  android:textSize="16sp"
                  android:background="@drawable/rectangle_shape"
                  android:inputType="textPassword"
                  android:textColorHint="#a7a7a7"
                  android:layout_marginTop="10dp"
        />


        <Button android:id="@+id/circle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circle_shape_common"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/arrow_for_4a"


        />


    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="No account yet? Create One"
              android:gravity="center"
              android:textColor="#f635f5"
              android:layout_centerInParent="true"
              android:layout_below="@id/secondLinear"
              android:layout_marginTop="120dp"


    />


</RelativeLayout>
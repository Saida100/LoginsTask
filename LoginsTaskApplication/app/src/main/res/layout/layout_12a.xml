<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/fon_for_12a_12b">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/rectangle_shape_for_12a_12b"
               android:layout_gravity="center"
               android:layout_marginTop="15dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Get Started"
              android:textColor="#a7a7a7"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:textSize="16sp"


    />
    <EditText android:layout_width="271dp"
              android:layout_height="65dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginTop="40dp"
              android:hint="Enter your Id"
              android:textColorHint="#0ae5fe"
              android:backgroundTint="#0ae5fe"
    />


    <EditText android:layout_width="271dp"
              android:layout_height="65dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:textColorHint="#a7a7a7"
              android:textColor="#a7a7a7"
              android:inputType="textPassword"
              android:hint="password"
              android:backgroundTint="#00FFFFFF"
              android:background="#fff"


    />
    <Button android:layout_width="271dp"
            android:layout_height="65dp"
            android:background="#0ae5fe"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Continue"
            android:layout_marginTop="20dp"
    />
    <LinearLayout android:layout_width="271dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:weightSum="2"
                  android:layout_marginTop="50dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Fresh account"
                  android:textColor="#a7a7a7"
                  android:layout_marginRight="100dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Reset"
                  android:textColor="#a7a7a7"
        />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#343430"
>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/romb_full_3a"
               android:layout_centerInParent="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="20dp"
    />
    <ImageView
            android:id="@+id/rombBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_romb_for3a"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp"

    />
    <ImageView
            android:id="@+id/rombFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/romb_for_3a"
            android:layout_centerInParent="true"
            android:layout_alignTop="@id/rombBlack"

    />

    <TextView
            android:id="@+id/signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/rombFull"
            android:layout_marginTop="10dp"
            android:textColor="#d7f60b"
            android:textSize="20sp"
            android:text="Sign In"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerInParent="true"
                  android:id="@+id/linearFirst"

    >

        <View android:layout_width="wrap_content"
              android:layout_height="2dp"
              android:background="#d7f60b"
              android:layout_centerInParent="true"
              android:layout_below="@id/signIn"
              android:layout_marginTop="35dp"
        >

        </View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/firstLinear"
                      android:layout_gravity="center"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/email_3a"
                       android:layout_marginLeft="40dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginTop="13dp"
            />
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="johndoe@gmail.com"
                      android:textColorHint="#d7f60b"
                      android:textSize="17sp"
                      android:inputType="textEmailAddress"
                      android:theme="@style/MyEditText"
                      android:textColor="#d7f60b"


            />
        </LinearLayout>

        <View android:layout_width="wrap_content"
              android:layout_height="2dp"
              android:background="#defe0a"
              android:layout_marginTop="5dp"
              android:layout_gravity="center"
        >

        </View>
        <View android:layout_width="wrap_content"
              android:layout_height="2dp"
              android:background="#d7f60b"
              android:layout_marginTop="15dp"
        >

        </View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/password_3a"
                       android:layout_marginLeft="40dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginTop="13dp"

            />
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColorHint="#d7f60b"
                      android:textSize="17sp"
                      android:inputType="textPassword"
                      android:theme="@style/MyEditText"
                      android:textColor="#d7f60b"
                      android:text="johndoe@gmail.com"
            />
        </LinearLayout>

        <View android:layout_width="wrap_content"
              android:layout_height="2dp"
              android:background="#d7f60b"
              android:layout_gravity="center"
              android:layout_marginTop="5dp"
        >

        </View>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d7f60b"
                android:text="Continue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
        />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:layout_centerInParent="true"
                  android:layout_below="@id/linearFirst"
                  android:layout_alignParentBottom="true"
                  android:layout_marginTop="90dp"
                  android:layout_marginBottom="10dp"

    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#d7f60b"
                  android:layout_gravity="center"
                  android:text="New User"
                  android:layout_weight="1"
                  android:layout_marginLeft="20dp"
                  android:layout_marginBottom="10dp"
                  android:gravity="left"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#d7f60b"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:gravity="right"
                  android:text="Reset"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="10dp"
        />

    </LinearLayout>

</RelativeLayout>